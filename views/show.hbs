<form class="row" action="/show/search/">
  <div class="col-9 input-group">
    <input type="text" name="keyword" class="form-control" placeholder="Type the keyword..." value="{{ keyword }}">
    <div class="input-group-append">
      <button class="btn btn-primary" type="submit" id="search-button"><i class="fas fa-search"></i></button>
    </div>
  </div>
</form>

<h4 class="mt-3">{{ message }}</h4>

<ol class="list-group list-group-numbered mt-3">
  {{#each urls}}
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold"> <a href="http://localhost:3000/{{ this.key }}" target="_blanck" > http://localhost:3000/{{ this.key }}</a></div>
      {{ this.originalURL}}
    </div>
  </li>
  {{/each}}
</ol>